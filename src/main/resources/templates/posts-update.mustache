{{>layout/header}}

<h1>게시글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            {{#posts}}
                <div class="form-group">
                    <label for="index">글 번호</label>
                    <input type="text" class="form-control" id="id" placeholder={{id}} readonly value={{id}}>
                </div>
            {{/posts}}
            <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            {{#posts}}
                <div class="form-group">
                    <label for="author"> 작성자 </label>
                    <input type="text" class="form-control" id="author" placeholder={{author}} readonly>
                </div>
            {{/posts}}
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-primary" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}
